{
  "compilerOptions": {
    "target": "ES2020", // modern JS target
    "module": "ESNext", // support dynamic imports
    "moduleResolution": "node",
    "strict": true, // enable type checking
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist", // optional, for compiled JS
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["scripts/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
